<link rel="stylesheet" type="text/css" href="stylesheets/regis.css">




<div id="id00" class="modal">
    <span onclick="document.getElementById('id00').style.display='none'" class="close" title="Close Modal">&times;</span>
    <form class="modal-content" action="/register/people" method="POST">
        <div class="container">
            <h1>Sign Up</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <label for="name">
                <b>Name</b>
            </label>
            <input class="log" type="text" placeholder="Enter Name" name="name" required>

            <label for="email">
                <b>Email</b>
            </label>
            <input class="log" type="text" placeholder="Enter Email" name="email" required>

            <label for="address">
                <b>address</b>
            </label>
            <input class="log" type="text" placeholder="Enter address" name="address" required>



            <label for="gender">
                <b>gender</b>
            </label>
            <select id="gender" name="gender" class="form-control">
                <option value="male">male</option>
                <option value="female">female</option>
            </select>

            <label for="Username">
                <b>Username</b>
            </label>
            <input class="log" type="text" placeholder="Enter Email" name="username" required>

            <label for="pass">
                <b>Password</b>
            </label>
            <input class="log" type="password" placeholder="Enter Password" name="pass" id="pass" required>

            <label for="psw-repeat">
                <b>Repeat Password</b>
            </label>
            <input class="log" type="password" placeholder="Repeat Password" name="pass-repeat" id="pass-repeat" onChange="checkPasswordMatch();"
                required>
            <div class="registrationFormAlert" id="divCheckPasswordMatch">
            </div>
            <div class="clearfix">
                <button type="button" onclick="document.getElementById('id00').style.display='none'" class="btn btn-danger">Cancel</button>
                <button id="myBtn" type="submit" class="btn btn-success">Register</button>

            </div>
        </div>
    </form>
</div>

<!-- Check Password -->
<script>
    // Get the modal
    var modal = document.getElementById('id00');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    function checkPasswordMatch() {
        var password = $("#pass").val();
        var confirmPassword = $("#pass-repeat").val();
        // var boo = false;
        if (password != confirmPassword) {
    document.getElementById("myBtn").disabled = true;
            $("#divCheckPasswordMatch").html("Passwords do not match!");
        } else {
    document.getElementById("myBtn").disabled = false;
            $("#divCheckPasswordMatch").html("Passwords match.");
        }
    }

    $(document).ready(function () {
        $("#pass-repeat").keyup(checkPasswordMatch);
    });
</script>